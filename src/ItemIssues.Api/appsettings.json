{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@Exception is null and @Properties['SourceContext'] = 'Microsoft.Extensions.Diagnostics.HealthChecks.DefaultHealthCheckService'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "restrictedToMinimumLevel": "Information",
                "path": "/var/log/dotnetcore/item-issues-api.clarkinc.biz/item-issues-api.clarkinc.biz.log",
                "shared": true,
                "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 5
              }
            }
          ]
        }
      },
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Error"
        }
      },
      {
        "Name": "Sentry",
        "Args": {
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  },
  "Sentry": {
    // Local errors not reported to sentry. Flip these settings to enable.
    "Dsn": "",
    //"Dsn": "https://01a2848ebae149199dc31ec0d191f6ec@sentry.dev.clarkinc.biz/388",
    "MaxRequestBodySize": "None",
    "SendDefaultPii": true
  },
  "SentryCustomData": {
    "Datapoints": [
      {
        "Name": "ASPNETCORE_ENVIRONMENT",
        "Format": "{0}",
        "Type": "Environment",
        "Sources": [
          {
            "Name": "ASPNETCORE_ENVIRONMENT",
            "Type": "Environment"
          }
        ]
      },
      {
        "Name": "correlation-id",
        "Format": "{0}",
        "Type": "Tag",
        "Sources": [
          {
            "Name": "correlation-id",
            "Type": "RequestHeader"
          }
        ]
      },
      {
        "Name": "Lookup_WSS",
        "Format": "https://sentry.{0}.clarkinc.biz/sentry/webstaurantstore/?query=correlation-id%3A\"{1}\"",
        "Type": "Extra",
        "Sources": [
          {
            "Name": "SENTRY_ENVIRONMENT",
            "Type": "Environment"
          },
          {
            "Name": "correlation-id",
            "Type": "RequestHeader"
          }
        ]
      },
      {
        "Name": "Lookup_Catalog",
        "Format": "https://sentry.{0}.clarkinc.biz/sentry/catalog/?query=correlation-id%3A\"{1}\"",
        "Type": "Extra",
        "Sources": [
          {
            "Name": "SENTRY_ENVIRONMENT",
            "Type": "Environment"
          },
          {
            "Name": "correlation-id",
            "Type": "RequestHeader"
          }
        ]
      }
    ]
  },
  "AllowedHosts": "*"
}
